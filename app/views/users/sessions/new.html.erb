<h2 style="text-align: center;">Sign in</h2>

<div style="max-width: 500px; margin: auto;">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div style="margin-bottom: 15px;">
      <%= f.label :email %><br>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", style: "width: 100%; padding: 10px;" %>
    </div>

    <div style="margin-bottom: 15px;">
      <%= f.label :password %><br>
      <%= f.password_field :password, autocomplete: "current-password", style: "width: 100%; padding: 10px;" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div style="margin-bottom: 15px;">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div style="text-align: center;">
      <%= f.submit "Sign in", style: "background-color: #808080; color: white; padding: 10px 15px; border: none; cursor: pointer;" %>
    </div>

    <div style="text-align: center;">
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>
