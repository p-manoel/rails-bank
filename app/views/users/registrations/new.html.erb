<h2 style="text-align: center;">Sign up</h2>

<div style="max-width: 500px; margin: auto;">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div style="margin-bottom: 15px;">
      <%= f.label :email %><br>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", style: "width: 100%; padding: 10px;" %>
    </div>

    <div style="margin-bottom: 15px;">
      <%= f.label :password %><br>
      <%= f.password_field :password, autocomplete: "new-password", style: "width: 100%; padding: 10px;" %>
    </div>

    <div style="margin-bottom: 15px;">
      <%= f.label :password_confirmation %><br>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", style: "width: 100%; padding: 10px;" %>
    </div>

    <div style="text-align: center; margin-bottom: 15px;">
      <%= f.submit "Sign up", style: "background-color: #808080; color: white; padding: 10px 15px; border: none; cursor: pointer;" %>
    </div>
    
    <div style="text-align: center;">
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>

